{
  "openapi": "3.0.0",
  "info": {
    "title": "Connections API",
    "version": "1.0.0",
    "contact": {
      "name": "Alexander Repeta",
      "url": "https://github.com/luxplanjay"
    }
  },
  "servers": [
    {
      "url": "https://connections-api.herokuapp.com",
      "description": "API base URL"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "summary": "Создать нового пользователя",
        "tags": ["Пользователь"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "201": { "description": "Пользователь создан." },
          "400": { "description": "Ошибка создания пользователя." },
          "500": { "description": "Ошибка сервера." }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Залогинить пользователя",
        "tags": ["Пользователь"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "string" },
                  "password": { "type": "string", "format": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Пользователь залогинен." },
          "400": { "description": "Ошибка логина." }
        }
      }
    },
    "/users/logout": {
      "post": {
        "summary": "Разлогинить пользователя",
        "tags": ["Пользователь"],
        "parameters": [
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "Токен выданный текущему пользователю.",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Пользователь разлогинен." },
          "401": {
            "description": "Отсутствует заголовок с токеном авторизации."
          },
          "500": { "description": "Ошибка сервера." }
        }
      }
    },
    "/users/current": {
      "get": {
        "summary": "Получить информацию о текущем пользователе",
        "tags": ["Пользователь"],
        "parameters": [
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "Токен выданный текущему пользователю.",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Информация найдена." },
          "401": {
            "description": "Отсутствует заголовок с токеном авторизации."
          }
        }
      }
    },
    "/contacts": {
      "get": {
        "summary": "Получить все контакты пользователя",
        "tags": ["Контакт"],
        "parameters": [
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "Токен выданный текущему пользователю.",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Контакты найдены." },
          "401": {
            "description": "Отсутствует заголовок с токеном авторизации."
          },
          "404": { "description": "Коллекции такого владельца не существует." },
          "500": { "description": "Ошибка сервера." }
        }
      },
      "post": {
        "summary": "Создать новый контакт",
        "tags": ["Контакт"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Contact" }
            }
          }
        },
        "parameters": [
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "Токен выданный текущему пользователю.",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "201": { "description": "Контакт успешно создан." },
          "400": { "description": "Ошибка создания контакта." },
          "401": {
            "description": "Отсутствует заголовок с токеном авторизации."
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "delete": {
        "summary": "Удалить контакт.",
        "tags": ["Контакт"],
        "parameters": [
          {
            "in": "path",
            "required": true,
            "name": "contactId",
            "schema": { "type": "integer" },
            "description": "Идентификатор контакта."
          },
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "Токен выданный текущему пользователю.",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Контакт успешно удалён." },
          "401": {
            "description": "Отсутствует заголовок с токеном авторизации."
          },
          "404": { "description": "Коллекции такого владельца не существует." },
          "500": { "description": "Ошибка сервера." }
        }
      },
      "patch": {
        "summary": "Обновить существующий контакт",
        "tags": ["Контакт"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Contact" }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "required": true,
            "name": "contactId",
            "schema": { "type": "integer" },
            "description": "Идентификатор контакта."
          },
          {
            "in": "header",
            "required": true,
            "name": "Authorization",
            "description": "Токен выданный текущему пользователю.",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Контакт успешно обновлён." },
          "400": { "description": "Ошибка обновления контакта." },
          "401": {
            "description": "Отсутствует заголовок с токеном авторизации."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Сгенерированный бекендом уникальный идентификатор."
          },
          "name": { "type": "string", "description": "Имя пользователя." },
          "email": {
            "type": "string",
            "description": "Адрес электронной почты."
          },
          "password": { "type": "string", "description": "Пароль." }
        },
        "example": {
          "name": "Adrian Cross",
          "email": "across@mail.com",
          "password": "examplepassword"
        }
      },
      "Contact": {
        "type": "object",
        "required": ["name", "number"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Сгенерированный бекендом уникальный идентификатор."
          },
          "name": { "type": "string", "description": "Имя контакта." },
          "number": {
            "type": "string",
            "description": "Телефонный номер контакта."
          }
        },
        "example": { "name": "Jacob Mercer", "number": "761-23-96" }
      }
    }
  },
  "tags": []
}
