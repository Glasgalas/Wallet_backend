  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "example": "john@mail.com"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "$2b$10$BB6rC4v06a7HxUp3ZWK6DuoGQmLJqokfsI55/r2XO9o5bvQlQZEXu"
          },
          "token": {
            "type": "string",
            "description": "User's token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYyZTQyZWE2N2Q4ODU3YjM4NTc5NDk3ZCIsImlhdCI6MTY1OTEyNjg0NSw"
          },
          "balance": {
            "type": "Number",
            "description": "User's balance",
            "example": 999
          }
        }
      },
      "Transaction": {
        "type": "object",
        "required": ["amount", "isIncome", "category", "date", "comment"],
        "properties": {
          "amount": {
            "type": "Number",
            "description": "Transaction's amount",
            "example": 99
          },
          "isIncome": {
            "type": "Boolean",
            "description": "Transaction's bool",
            "example": "false"
          },
          "category": {
            "type": "string",
            "description": "Transaction's category",
            "example": "Products"
          },
          "date": {
            "type": "string",
            "description": "Transaction's date",
            "example": "07-29-2022"
          },
          "month": {
            "type": "Number",
            "description": "Transaction's month",
            "example": 7
          },
          "year": {
            "type": "Number",
            "description": "Transaction's year",
            "example": 2022
          },
          "comment": {
            "type": "string",
            "description": "Transaction's comment",
            "example": "Salt"
          },
          "owner": {
            "type": "string",
            "description": "Transaction's owner",
            "example": "62e42ea67d8857b38579497d"
          },
          "_id": {
            "type": "string",
            "description": "Transaction's id",
            "example": "62e44dcd1f01ddfdec600943"
          },
          "createdAt": {
            "type": "string",
            "description": "Transaction's create date",
            "example": "2022-07-29T21:14:53.661Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Transaction's update date",
            "example": "2022-07-29T21:14:53.661Z"
          }
        }
      }
    }
