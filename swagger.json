              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "responses status",
                      "example": "success"
                    },
                    "code": {
                      "type": "string",
                      "description": "responses code",
                      "example": "201"
                    },
                    "message": {
                      "type": "string",
                      "description": "responses message",
                      "example": "Success! New user added"
                    },
                    "data": {
                      "type": "object",
                      "description": "responses data",
                      "example": {
                        "name": "John",
                        "email": "john@mail.com"
